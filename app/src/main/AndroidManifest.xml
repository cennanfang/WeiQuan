<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.swinfo.weiquan">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".message.MessageEditActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name=".dummy.ItemListActivity"
            android:label="@string/title_item_list" />
        <activity
            android:name=".dummy.ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".dummy.ItemListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.swinfo.weiquan.dummy.ItemListActivity" />
        </activity>
        <activity android:name=".search.SearchActivity" />
        <activity
            android:name=".user.LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>